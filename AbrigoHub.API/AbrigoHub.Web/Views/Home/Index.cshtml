@model AbrigoHub.Web.Models.WeatherResponse
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card weather-card mt-4">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Clima em @Model?.Name</h2>
                    
                    @if (Model?.Weather != null && Model.Weather.Any())
                    {
                        var weather = Model.Weather[0];
                        <div class="weather-icon mb-3">
                            <img src="@($"http://openweathermap.org/img/wn/{weather.Icon}@2x.png")" alt="@weather.Description" />
                        </div>
                        <h3 class="weather-description">@weather.Description</h3>
                    }

                    @if (Model?.Main != null)
                    {
                        <div class="weather-details mt-4">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="weather-info">
                                        <h4>Temperatura</h4>
                                        <p class="temperature">@Math.Round(Model.Main.Temp, 1)°C</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="weather-info">
                                        <h4>Sensação Térmica</h4>
                                        <p class="feels-like">@Math.Round(Model.Main.Feels_like, 1)°C</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="weather-info">
                                        <h4>Umidade</h4>
                                        <p class="humidity">@Model.Main.Humidity%</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .weather-card {
        background: linear-gradient(135deg, #00b4db, #0083b0);
        color: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .weather-icon img {
        width: 100px;
        height: 100px;
    }

    .weather-description {
        text-transform: capitalize;
        font-size: 1.5rem;
        margin: 1rem 0;
    }

    .weather-info {
        padding: 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        margin: 0.5rem;
    }

    .weather-info h4 {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        opacity: 0.9;
    }

    .weather-info p {
        font-size: 1.5rem;
        margin: 0;
        font-weight: bold;
    }

    .temperature, .feels-like, .humidity {
        font-size: 2rem !important;
    }
</style>
